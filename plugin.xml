<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-bluetoothprinter" version="0.1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>BluetoothPrinter</name>
    <js-module name="BluetoothPrinter" src="www/BluetoothPrinter.js">
        <clobbers target="cordova.plugins.BluetoothPrinter" />
    </js-module>

    <!-- ios -->
    <platform name="ios">
        <plugins-plist key="BluetoothPrinter" string="BluetoothPrinter" />

        <config-file target="config.xml" parent="/*">
            <feature name="BluetoothPrinter">
                <param name="ios-package" value="BluetoothPrinter" />
            </feature>
        </config-file>

        <header-file src="src/ios/BluetoothPrinter.h" />
        <source-file src="src/ios/BluetoothPrinter.m" />
    </platform>
</plugin>
